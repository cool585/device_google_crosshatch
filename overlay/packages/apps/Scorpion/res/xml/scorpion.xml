<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/settings_title" >

    <!-- Active Edge -->
    <PreferenceScreen
        android:key="active_edge_category"
        android:title="@string/active_edge_title"
        android:summary="@string/active_edge_summary"
        android:icon="@drawable/dt_active_edge"
        android:fragment="com.nest.settings.fragments.ActiveEdge" />

    <!-- Ambient -->
    <PreferenceScreen
        android:key="ambient_category"
        android:title="@string/ambient_title"
        android:summary="@string/ambient_summary"
        android:icon="@drawable/ic_settings_ambient"
        android:fragment="com.nest.settings.fragments.AmbientSettings" />

    <!-- Buttons -->
    <PreferenceScreen
        android:key="buttonsettings_category"
        android:title="@string/button_title"
        android:summary="@string/button_summary"
        android:icon="@drawable/ic_settings_button"
        android:fragment="com.nest.settings.fragments.ButtonSettings" />

    <!-- Devices Parts -->
    <PreferenceScreen
        android:key="device_extras_category"
        android:icon="@drawable/ic_settings_device"
        android:title="@string/device_extras_title"
        android:summary="@string/device_extras_summary" >
    <intent android:action="com.android.settings.action.EXTRA_SETTINGS"
        android:targetPackage="com.dirtyunicorns.settings.device"
        android:targetClass="com.dirtyunicorns.settings.device.TouchscreenGestureSettings" />
    </PreferenceScreen>

    <!-- Gestures -->
    <PreferenceScreen
        android:key="gestures_category"
        android:title="@string/gestures_title"
        android:summary="@string/gestures_summary" 
        android:icon="@drawable/ic_settings_gesture"
        android:fragment="com.nest.settings.fragments.GestureSettings" />

    <!-- Lock Screen -->
    <PreferenceScreen
        android:key="lockscreen_category"
        android:title="@string/lockscreen_title"
        android:summary="@string/lockscreen_summary"
        android:icon="@drawable/ic_settings_lockscreen" 
        android:fragment="com.nest.settings.fragments.LockScreenSettings" />
	
    <!-- Misc -->
    <PreferenceScreen
        android:key="misc_category"
        android:title="@string/misc_title"
        android:summary="@string/misc_summary"
        android:icon="@drawable/ic_settings_misc" 
        android:fragment="com.nest.settings.fragments.MiscSettings" />

    <!-- Navigation Bar -->
    <!-- <PreferenceScreen
        android:key="navigationbar_category"
        android:title="@string/navigation_title"
        android:summary="@string/navigation_summary"
        android:icon="@drawable/ic_settings_navigation" 
        android:fragment="com.nest.settings.fragments.NavbarSettings" /> -->

    <!-- Notifications -->
    <PreferenceScreen
        android:key="notifications_category"
        android:title="@string/notifications_title"
        android:summary="@string/notifications_summary"
        android:icon="@drawable/ic_settings_notifications"
        android:fragment="com.nest.settings.fragments.NotificationSettings" />

    <!-- Power Menu -->
    <PreferenceScreen
        android:key="powermenu__category"
        android:title="@string/powermenu_title"
        android:icon="@drawable/ic_settings_powermenu"
        android:summary="@string/powermenu_summary"
        android:fragment="com.nest.settings.fragments.PowerMenuSettings" />

    <!-- Quick Settings -->
    <PreferenceScreen
        android:key="quicksettings_category"
        android:title="@string/quicksettings_title"
        android:summary="@string/quicksettings_summary"
        android:icon="@drawable/ic_settings_quicksettings"
        android:fragment="com.nest.settings.fragments.QuickSettings" />

    <!-- Recents -->
    <PreferenceScreen
        android:key="recents_category"
        android:title="@string/recents_title"
        android:summary="@string/recents_summary"
        android:icon="@drawable/ic_settings_recents"
        android:fragment="com.nest.settings.fragments.RecentsSettings" />

    <!-- Status Bar -->
    <PreferenceScreen
        android:key="statusbar_category"
        android:title="@string/statusbar_title"
        android:summary="@string/statusbar_summary"
        android:icon="@drawable/ic_settings_statusbar"
        android:fragment="com.nest.settings.fragments.StatusBarSettings" />

    <!-- System -->
    <!-- <PreferenceScreen
        android:key="system_category"
        android:title="@string/system_title"
        android:summary="@string/system_summary" 
        android:fragment="com.nest.settings.fragments.SystemSettings" /> -->
</PreferenceScreen>
